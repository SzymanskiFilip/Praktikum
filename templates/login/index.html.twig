{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('style.css') }}">
{% endblock %}

{% block javascripts %}
    {{ block('javascripts', 'components/form/form.html.twig') }}
{% endblock %}

{% block style %}
    <style>
    .login {
         background-color: rgb(var(--color-primary-darker));
         height: 100vh;
         display: flex;
         justify-content: center;
         align-items: center;
         flex-direction: column;
     }

     form {
        display: flex;
        flex-direction: column;
        justify-content: center;
        gap: 30px;
     }


    .login-text h1 {
        color: rgb(var(--color-primary-lighter));
        text-align: center;
        margin-bottom: 64px;
    }

    .form-group {
        position: relative;
    }

    .form-group label{
        text-transform: uppercase;
        color: rgb(var(--color-primary-lighter));
        background-color: rgb(var(--color-primary-darker));
        position: absolute;
        top: -12px;
        left: 10px;
        padding: 2px;
        padding-left: 4px;
        padding-right: 4px;
        font-size: 1.2rem;
        font-family: 'Lexend', sans-serif;
        font-weight: 400;
    }
    .form-group input {
        padding: 16px;
        width: 620px;
        background-color: rgb(var(--color-primary-darker));
        color: rgb(var(--color-primary-normal));
        font-weight: 500;
        font-size: 18px;
        line-height: 30px;
        border: 2px solid white;
        border-radius: 5px;
    }

    .form-group:nth-child(4){
        color: white;
        background-color: #d9534f;
        border-radius: 5px;
        font-family: 'Lexend', sans-serif;
        width: auto;
        width: 320px;
        height: 62px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .form-group input:focus{
        outline: none;
    }

    .btn {
        background-color: rgb(var(--color-navbar-blue));
        color: rgb(var(--color-primary-lighter));
        font-weight: bold;
        border-radius: 5px;
        width: 320px;
        height: 62px;
        text-transform: uppercase;
        font-weight: 400;
        font-size: 1.1rem;
        transition: 0.1s linear;
    }

    @media screen and (max-width: 620px){
        .form-group input{
            width: calc(100vw - 60px)
        }

        .btn {
            width: calc(100vw * 0.5);
        }

    }
        
    </style>

    {{ block('style', 'components/form/form.html.twig') }}
{% endblock %}

{% block body %}
    <section class="login">
        
        <div class="login-text">
            <h1>LOGIN</h1>
        </div   
        <div id="form" class="login-form">
            
            <form action="{{ path('login') }}" method="post">
                <div class="form-group">
                    <label for="username">Anmeldename</label>
                    <input type="text" id="username" class="form-control {% if error %}is-invalid{% endif %}" name="_username" value="{{ last_username }}" required="required"/>
                </div>
                <div class="form-group">
                    <label for="password">Passwort</label>
                    <input type="password" id="password" class="form-control {% if error %}is-invalid{% endif %}" name="_password" required="required" />
                </div>
                
                <div class="form-group">
                    <button type="submit" class="btn-primary btn">EINLOGGEN</button>
                </div>
                {% if error %}
                    <div class="form-group">
                        <div class="error">
                            <span class="form-error-icon badge badge-danger text-uppercase">Fehler</span>
                            <span class="form-error-message">{{ error.messageKey|trans(error.messageData, 'security') }}</span>
                        </div>
                        
                    </div>
                {% endif %}
            </form>
        </div>
       
    </section>
{% endblock %}
