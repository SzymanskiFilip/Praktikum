{% block javascripts %}
    {{ block('javascripts', 'components/form/form.html.twig') }}
{% endblock %}

{% block style %}
{{ block('style', 'components/form/form.html.twig') }}
<style>
    #contact {
        background-color: rgb(var(--color-primary-dark));
        position: relative;
    }

    .form-group label{
        color: rgb(var(--color-primary-lighter));
        background-color: rgb(var(--color-primary-dark));
        position:relative;
        color: pink;
        top: 0;
        left: 0;
    }

    .form-group input {
        padding: 16px;
        background-color: rgb(var(--color-primary-dark));
        color: rgb(var(--color-primary-normal));
        font-weight: 500;
        font-size: 18px;
        line-height: 30px;
        border: 2px solid white;
        border-radius: 5px;
    }

    .form-group input:focus{
        outline: none;
    }
    
</style>
{% endblock %}

{% block body %}
<section id="contact" class="contact">
    <h1>Kontakt</h1>

    {% form_theme form 'form/contact_form.html.twig' %}
        {{ form(form) }}
    {% include 'components/flash_message.html.twig' with {'id': 'contact'} %}
</section>
{% endblock %}