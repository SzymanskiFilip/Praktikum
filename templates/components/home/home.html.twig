{% block style %}
    <style>
        @media screen and (max-width: 1020px) {

        }
        @media screen and (max-width: 1360px) {
            #home{
                height: calc(100dvh - 55px);
            }
        }

        #home {
            height: 100dvh;
            background-color: rgb(var(--color-primary-darker));
            display: flex;
            justify-content: center;
            align-items: center;
        }

        div h1 {
            color: rgb(var(--color-primary-lighter));
            text-shadow: 2px 5px 4px black 25%;
        }

        div img {
            vertical-align: top;
        }
    </style>
{% endblock %}

{% block body %}
    <section id="home" class="home">
        <div>
            <h1>Filip<br/>Szymanski</h1>
            <div>
                <img src="svg/blob.svg" alt="">
                <img src="svg/peep.svg" alt="">
            </div>

        </div>
    </section>
{% endblock %}
