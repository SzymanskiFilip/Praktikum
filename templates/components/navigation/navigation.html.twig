{% block javascripts %}
    <script>
        function onNav() {
            var element = document.getElementById("toggle");
            element.classList.toggle("toggle--on");

            var navigation = document.getElementById("menu-holder");
            navigation.classList.toggle("toggle--on");
        }
    </script>
{% endblock %}
{% block style %}
    <style>
        .nav-points {
            color: rgb(var(--color-primary-lighter));
            padding: 5px 0;
            font-size: 28px;
            line-height: 40px;
            font-weight: 700;
            text-decoration: none;
            text-transform: uppercase;
        }


        .header-holder {
            position: fixed;
            background: rgb(var(--color-primary-dark));
            width: 380px;
            height: 100vh;
            z-index: 1;
            top:0;
        }

        .toggle-holder {
            position: fixed;
            top: 30px;
            left: 30px;
            z-index: 3;
        }

        #toggle {
            height: 32px;
            width: 30px;
            position: relative;
        }

        #toggle:hover{
            cursor: pointer;
        }

        #toggle:before {
            transform: translate3d(0,-8px,0px);
            width: 21px;
            margin-left: 0;
            content: '';
            height: 3px;
            position: absolute;
            transform-origin: 50% 50%;
            transition: all .25s;
            top:8px;
            background: rgb(var(--color-primary-lighter));
        }
        #toggle:after {
            transform: translate3d(0,8px,0px);
            width: 30px;
            margin-left: 0;
            content: '';
            height: 3px;
            position: absolute;
            transform-origin: 50% 50%;
            top:8px;
            background: rgb(var(--color-primary-lighter));
        }

        #toggle .menu-line {
            width: 13px;
            height: 3px;
            position: absolute;
            transition: all .25s;
            margin-left: 0;
            top: 8px;
            background-color: rgb(var(--color-primary-lighter));
        }

        #toggle.toggle--on .menu-line{
            opacity: 0;
        }

        #toggle.toggle--on:before {
            transform: rotate3d(0,0,1,
            45deg) translate3d(0,0,0);
            background-color: rgb(var(--color-primary-lighter));
            margin-left: 0;
            width: 26px;
        }

        #toggle.toggle--on:after {
            transform: rotate3d(0,0,1,
            -45deg);
            background-color: rgb(var(--color-primary-lighter));
            width: 26px;
        }
        #menu-holder {
            background-color: rgb(var(--color-navbar-blue));
            width: 380px;
            height: 100%;
            min-height: 100vh;
            top: 0;
            left: 0;
            position: absolute;
            transform: translateX(-400px);
            transition: transform .3s linear;
            z-index: 1;
            overflow: auto;
            display: flex;
            align-items: center;
        }

        #menu-holder.toggle--on {
            transform: translateX(0);
        }

        .menu-holder--points {
            width: fit-content;
            height: fit-content;
            padding-left: 32px;
        }

        .menu-item {
            list-style: none;
        }
        .menu-item:not(:first-child) {
            margin-top: 24px;
        }

        .menu-item-row {
            display: flex;
            flex: row;
            justify-content: start;
            align-items: center;
            gap: 8px;
            margin-top: 32px; 
        }

        .menu-item-row img {
            width: 24px;
            height: 24px;
        }

        .menu-item-row h3 {
            color: rgb(var(--color-primary-lighter));
            margin: 0;
            padding: 0;
        }

        @media screen and (max-width: 1599px){
            .header-holder {
                width: 320px;
            }

            #menu-holder {
                width: 320px;
                transform: translateX(-320px);
            }
        }
        @media screen and (max-width: 1360px){
            .header-holder {
                width: 90px;
            }
        }
        @media screen and (max-width: 1020px){
            .header-holder {
                height: 55px;
                width: 100%;
                z-index: 2;
            }

            .toggle-holder {
                top: 15px;
                left: 15px;
            }
        }

        @media screen and (max-width: 650px) {
            #menu-holder {
                width: 100%;
                transform: translateX(-100%);
                overflow: auto;
            }
        }
    </style>
{% endblock %}
{% block body %}
    <header class="header-holder">
        <div class="toggle-holder">
            <div id="toggle" onClick="onNav()">
                <div class="menu-line"></div>
            </div>
        </div>
        <div id="menu-holder">
            <nav class="menu-holder--points">
                <ul>
                    <li class="menu-item">
                        <div class="menu-item-row">
                            <image src="svg/home-alt-svgrepo-com.svg" alt="Icon"/>
                            <a href=""><h3>HOME</h3></a>
                        </div>
                        <div class="menu-item-row">
                            <image src="svg/question-mark-svgrepo-com.svg" alt="Icon"/>
                            <a href=""><h3>INTERESSEN</h3></a>
                        </div>
                        <div class="menu-item-row">
                            <image src="svg/graph-svgrepo-com.svg" alt="Icon"/>
                            <a href=""><h3>ERFAHRUNGEN</h3></a>
                        </div>
                        <div class="menu-item-row">
                            <image src="svg/history-svgrepo-com.svg" alt="Icon"/>
                            <a href=""><h3>WERDEGANG</h3></a>
                        </div>
                        <div class="menu-item-row">
                            <image src="svg/light-bulb-13-svgrepo-com.svg" alt="Icon"/>
                            <a href=""><h3>KENNTNISSE</h3></a>
                        </div>
                        <div class="menu-item-row">
                            <image src="svg/email-svgrepo-com.svg" alt="Icon"/>
                            <a href=""><h3>KONTAKT</h3></a>
                        </div>
                    </li>
                </ul>
            </nav>
        </div>

        {{ include('components/profile/profile.html.twig') }}
    </header>
{% endblock %}
